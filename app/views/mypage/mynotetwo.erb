      <% if p.user_id == current_user.id %>
          <tr>
               <td><a href="/deta_show/<%= p.id %>"><%= p.id %></a></td>
               <td><%= p.local %></td> 
               <td><%= p.date %></td>
               <td><%= p.time.try(:strftime, "%p %I시 %M분") %></td>
               <td><%= p.time2.try(:strftime, "%p %I시 %M분") %></td>
               <td><%= p.money %></td>
               <td><%= p.work %></td>
               <td><%= p.title %></td>
                <td><%= p.user.email %></td>
          </tr>
       <% end %>
    <% end %>
