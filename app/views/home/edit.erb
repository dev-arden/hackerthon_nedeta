<form action = "/update/<%= @post.id %>" method = "POST">
  <p>
    <textarea name="local" rows="3" cols="20"><%= @post.local %></textarea>
  </p>
  <p>
    <input type="date" name="date">
  </p>
  <p>
    <input type="time" name="starttime"> ~ <input type="time" name="finishtime">
  </p>
  <p>
    <textarea name="money" rows="3" cols="20"><%= @post.money %></textarea>
  </p>
  <p>
    <input type="radio" name="work" value="need" checked> 필요
    <input type="radio" name="work" value="needx"> 불필요
  </p>
  <p>
    <textarea name="title" rows="3" cols="20"><%= @post.title %></textarea>
  </p>
  <p>
    <textarea name="content" rows="3" cols="20"><%= @post.content %></textarea>
  </p>
   <p>
    <button type="submit">수정 완료</button>
  </p>
</form>